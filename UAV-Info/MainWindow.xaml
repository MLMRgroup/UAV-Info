<Window x:Class="UAV_Info.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" 
        xmlns:local="clr-namespace:UAV_Info"
        mc:Ignorable="d"
        Title="无人机数据分析" Height="700" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Uniform" Opacity="0.3"/>
        </Grid.Background>
        <TabPanel x:Name="tabPanel" Height="30" Margin="10,0" VerticalAlignment="Top" Background="#FFF3F2F2">
            <Menu x:Name="menu_1" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110">
                <MenuItem Header="导入姿态文件" Height="30" Width="110" Click="importAngleData"></MenuItem>
            </Menu>
            <Menu x:Name="menu_2" Margin="0,0,-100,0" d:LayoutOverrides="HorizontalAlignment">
                <MenuItem Header="导入轨迹文件" Height="30" Width="110" Click="importTraceData"></MenuItem>
            </Menu>
        </TabPanel>
        <d3:ChartPlotter Name ="plotPitch" Width="330"  HorizontalAlignment="Left" Margin="33,49,0,507">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis Name="axisPitch"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="HaxisPitch"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:CursorCoordinateGraph Name="cordPitch"/>
        </d3:ChartPlotter>
        <d3:ChartPlotter Name ="plotYaw" Width="330"  HorizontalAlignment="Left" Margin="33,167,0,388">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis Name="axisYaw"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="HaxisYaw"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:CursorCoordinateGraph Name="cordYaw"/>
        </d3:ChartPlotter>
        <d3:ChartPlotter Name ="plotRoll" Width="330"  HorizontalAlignment="Left" Margin="33,286,0,265">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis Name="axisRoll"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:CursorCoordinateGraph Name="cordRoll"/>
            <d3:ChartPlotter.HorizontalAxis >
                <d3:HorizontalDateTimeAxis x:Name="dateAxis_angle"/>
            </d3:ChartPlotter.HorizontalAxis>
        </d3:ChartPlotter>

        <d3:ChartPlotter Name ="plotPitchNormal" Height="113" Margin="0,49,46,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="330">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis x:Name="axisPitchNormal"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis x:Name="HaxisPitchNormal"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:CursorCoordinateGraph Name="cordPitchNormal"/>
        </d3:ChartPlotter>
        <d3:ChartPlotter Name ="plotYawNormal" Height="114" Margin="0,167,46,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="330">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis x:Name="axisYawNormal"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis x:Name="HaxisYawNormal"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:CursorCoordinateGraph Name="cordYaNormal"/>
        </d3:ChartPlotter>
        <d3:ChartPlotter Name ="plotRollNormal" Height="118" Margin="0,286,46,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="330">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis x:Name="axisRollNormal"/>
            </d3:ChartPlotter.VerticalAxis>
            <d3:CursorCoordinateGraph Name="cordRollNormal"/>
            <d3:ChartPlotter.HorizontalAxis >
                <d3:HorizontalDateTimeAxis x:Name="dateAxis_angleNormal"/>
            </d3:ChartPlotter.HorizontalAxis>
        </d3:ChartPlotter>
        <d3:ChartPlotter Name="traceChartPlotter" Margin="33,0,0,25" HorizontalAlignment="Left" Width="330" Height="194" VerticalAlignment="Bottom">
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalAxis x:Name="axisAlt"/>
            </d3:ChartPlotter.VerticalAxis>

            <d3:Header FontFamily="Arial" Content=""/>
            <d3:VerticalAxisTitle FontFamily="Arial" Content=""/>
            <d3:HorizontalAxisTitle FontFamily="Arial" Content="二维地图轨迹"/>
            <d3:CursorCoordinateGraph Name="cordMap"/>
        </d3:ChartPlotter>
        <Label x:Name="label" Content="俯仰角" HorizontalAlignment="Right" Height="30" Margin="0,0,290,156" VerticalAlignment="Bottom" Width="60"/>
        <Label x:Name="label_Copy" Content="滚转角" HorizontalAlignment="Right" Height="30" Margin="0,0,290,98" VerticalAlignment="Bottom" Width="60"/>
        <Label x:Name="label_Copy1" Content="偏航角" HorizontalAlignment="Right" Height="30" Margin="0,0,290,47" VerticalAlignment="Bottom" Width="60"/>
        <Label x:Name="label_Copy2" Content="最大值" HorizontalAlignment="Right" Height="30" Margin="0,0,227,156" VerticalAlignment="Bottom" Width="50"/>
        <Label x:Name="label_Copy3" Content="最大值" HorizontalAlignment="Right" Height="30" Margin="0,0,227,98" VerticalAlignment="Bottom" Width="50"/>
        <Label x:Name="label_Copy4" Content="最大值" HorizontalAlignment="Right" Height="30" Margin="0,0,227,47" VerticalAlignment="Bottom" Width="50"/>
        <Label x:Name="label_Copy5" Content="最小值" HorizontalAlignment="Right" Height="30" Margin="0,0,92,156" VerticalAlignment="Bottom" Width="50"/>
        <TextBox x:Name="pitchMaxTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,162,161" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <TextBox x:Name="rollMaxTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,162,98" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <TextBox x:Name="yawMaxTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,162,52" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <TextBox x:Name="pitchMinTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,32,161" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <TextBox x:Name="rollMinTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,32,103" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <TextBox x:Name="yawMinTextBox" HorizontalAlignment="Right" Height="25" Margin="0,0,32,52" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="55"/>
        <Label x:Name="label_Copy6" Content="最小值" HorizontalAlignment="Right" Height="30" Margin="0,0,92,98" VerticalAlignment="Bottom" Width="50"/>
        <Label x:Name="label_Copy7" Content="最小值" HorizontalAlignment="Right" Height="30" Margin="0,0,92,47" VerticalAlignment="Bottom" Width="50"/>
        <Button x:Name="btnNormSpanReset" Content="重置" HorizontalAlignment="Left" Margin="60,409,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="9.59,-1.751" Click="OnClick_Reset"/>
        <Button x:Name="btnTimeSpanReset" Content="重置" HorizontalAlignment="Left" Margin="474,409,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="9.59,-1.751" Click="OnClick_Reset"/>
        <Button Name="btnNormlize" Content="规范化" HorizontalAlignment="Left" Margin="246,409,0,0" VerticalAlignment="Top" Width="74" Click="onClick_NormalizeAngle" IsEnabled="False"/>
    </Grid>
</Window>
